                    android:onClick="btn_onclik"
                    android:padding="20dp"
                    android:text="شعبان"/>

                <Button
                    android:id="@+id/button10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
